# הגדרות שרת
PORT=3000
HOST=localhost
NODE_ENV=development

# Google Drive API
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# הגדרות קאש
CACHE_TTL=10800        # זמן חיים במטמון בשניות (3 שעות)
CACHE_MAX_SIZE=1000    # מספר מקסימלי של פריטים במטמון
CACHE_MAX_MEMORY=1024  # גודל מקסימלי של המטמון במגהבייטים

# הגדרות ביצועים
UV_THREADPOOL_SIZE=32  # גודל ה-thread pool
REQUEST_TIMEOUT=300000 # זמן מקסימלי לבקשה במילישניות (5 דקות)

# הגדרות לוגים
LOG_LEVEL=info        # רמת הלוגים (debug/info/warn/error)
LOG_PRETTY=true      # פורמט יפה ללוגים בפיתוח

# הגדרות אבטחה
RATE_LIMIT=100       # מספר בקשות מקסימלי לדקה
CORS_ORIGIN=http://localhost:3000  # כתובות מורשות ל-CORS
